<style>
.reg-form {
    margin-top: 150px;
    margin-bottom: 75px;
}
.reg-form form {
  min-width:300px;
  max-width:400px;
  padding:20px;
  margin: 0 auto;
  background:#ffffff59; 
  -webkit-box-shadow: 3px 3px 23px -9px rgba(0,0,0,0.86);
  -moz-box-shadow: 3px 3px 23px -9px rgba(0,0,0,0.86);
  box-shadow: 3px 3px 23px -9px rgba(0,0,0,0.86);
    background: #70e1f5;
  background: -webkit-linear-gradient(to right, #ffd19474, #75d2e392);  
  background: linear-gradient(to right, #ffd19490, #6fc8d877);
}

.reg-form form input {
  border:1px solid #eee;
  border-radius:0 !important;
  padding:5px 8px;
  color:#444;
  box-shadow: inset 1px -20px 6px 6px rgba(255, 255, 255, 0.91), inset -20px 2px 10px 0px rgba(0, 0, 0, 0.25);
}


.reg-form form input:focus {
    outline: none !important;
    border: none !important;
}

.reg-form form button {
  color:#555;
  background:#ffffffad;
  border:1px solid #fff !important;
  margin-top:20px;
  border-radius:0px Important;
}

.reg-form form button:hover {
  background:#fff !important;
}

.pull-right {
  float:right;
}

</style>
<div class="reg-form container">
  
  <!-- Display error messages -->
    {{#each errors}}
      <div class="alert alert-danger" role="alert">
        {{this}}
      </div>
    {{/each}}
  {{/if}}
  
  <form action="/signup" method="post">
    {{> flash}}
     <div class="row gy-2">
        <div class="form-group col-md-12">
          <label for="email">Email address</label>
          <input type="email" class="form-control" value="{{formData.email}}" name="email">
        </div>
        <div class="form-group col-md-6">
          <label for="first_name">Password</label>
          <input type="text" class="form-control" name="password">
        </div>
     </div>   
    <button type="submit" class="btn" >Submit</button>
  </form>
</div>
