<style>
.reg-form {
    margin-top: 60px;
}
.reg-form form {
  min-width:300px;
  max-width:400px;
  padding:20px;
  margin: 0 auto;
  background:#ffffff59; 
  -webkit-box-shadow: 3px 3px 23px -9px rgba(0,0,0,0.86);
  -moz-box-shadow: 3px 3px 23px -9px rgba(0,0,0,0.86);
  box-shadow: 3px 3px 23px -9px rgba(0,0,0,0.86);
    background: #70e1f5;
  background: -webkit-linear-gradient(to right, #ffd19474, #75d2e392);  
  background: linear-gradient(to right, #ffd19490, #6fc8d877);
}

.reg-form form input {
  border:1px solid #eee;
  border-radius:0 !important;
  padding:5px 8px;
  color:#444;
}
.reg-form form input:focus {
    outline: none !important;
}

.reg-form form button {
  color:#555;
  background:#ffffffad;
  border:1px solid #fff !important;
  margin-top:20px;
  border-radius:0px Important;
}

.reg-form form button:hover {
  background:#fff !important;
}

.pull-right {
  float:right;
}

</style>

<div class="reg-form container">
  <form action="/register">
     <div class="form-group">
      <label for="name">Full Name :</label>
      <input type="text" class="form-control" name="name">
    </div>
    <div class="form-group">
      <label for="dob">Date of Birth :</label>
      <input type="text" class="form-control" name="dob">
    </div>
    <div class="form-group">
      <label for="email">Email address :</label>
      <input type="email" class="form-control" name="email">
    </div>
    <div class="form-group">
      <label for="address">Address :</label>
      <input type="text" class="form-control" name="address">
    </div>   
    <div class="form-group">
      <label for="income">Income :</label>
      <input type="number" class="form-control" name="income">
    </div>
        <div class="failed-message">{{{reg_failed_msg}}}</div>  
      <button type="reset" class="btn">Reset</button>
      <button type="submit" class="btn" style="float:right">Submit</button>
     </form>
</div>