<style>
.student-profile {
    margin-top: 100px;
    margin-bottom: 100px;
}
.student-profile .card {
  border-radius: 10px;
}

.student-profile .card .card-header .profile_img {
  width: 150px;
  height: 150px;
  object-fit: cover;
  margin: 10px auto;
  border: 10px solid #ccc;
  border-radius: 50%;
}

.student-profile .card h3 {
  font-size: 20px;
  font-weight: 700;
}

.student-profile .card p {
  font-size: 16px;
  color: #000;
}

.student-profile .table th,
.student-profile .table td {
  font-size: 14px;
  padding: 5px 10px;
  color: #000;
}
.dashboard-login {
  margin-top: 150px !important;
}
</style>
{{#if token}}
<!-- Student Profile -->
<div class="student-profile py-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="card shadow-sm">
          <div class="card-header bg-transparent text-center">
            <img class="profile_img" src="https://placeimg.com/640/480/arch/any" alt="">
            <h3 class="student-name">{{student_data.name}}</h3>
          </div>
          <div class="card-body">
            <p class="mb-0"><strong class="pr-1">Student ID: </strong>321000001</p>
            <p class="mb-0"><strong class="pr-1">Class: </strong>4</p>
            <p class="mb-0"><strong class="pr-1">Section: </strong>A</p>
          </div>
        </div>
      </div>
      <div class="col-lg-8 my-4">
        <div class="card shadow-sm">
          <div class="card-header bg-transparent border-0 my-2">
            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
          </div>
          <div class="card-body pt-0">
            <table class="table table-bordered">
              <tr>
                <th width="30%">Email</th>
                <td width="2%">:</td>
                <td class="student-email">{{student_data.email}}</td>
              </tr>
              <tr>
                <th width="30%">Fee (&#8358;)</th>
                <td width="2%">:</td>
                <td class="course-fee">10000</td>
              </tr>
              <tr>
                <th width="30%">Academic Year	</th>
                <td width="2%">:</td>
                <td>2020</td>
              </tr>
              <tr>
                <th width="30%">Gender</th>
                <td width="2%">:</td>
                <td>Male</td>
              </tr>
              <tr>
                <th width="30%">Course</th>
                <td width="2%">:</td>
                <td>Web Development</td>
              </tr>
              <tr>
                <th width="30%">Make Payment</th>
                <td width="2%">:</td>
                <td><span id="pay-btn" class="btn btn-sm btn-success">Make Payment</span></td>
                {{!-- <td class="text-success">Payment Made <i class="fa fa-check"></i></td> --}}
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{else}}
  <div class="dashboard-login text-center my-5">You are not logged in.<a href="/login" class=""> Click to login</a><div id="loader"></div></div>
{{/if}}